<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="Description" content="Pilier de cave">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,700" rel="stylesheet">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

    <header>
        <a id="logo" href="{{ path('homepage') }}"><h1>Pilier de Cave</h1></a>
        <a id="pannier" href="#">Pannier</a>
        <button id="burger" class="open-main-nav">
            <span class="burger"></span>
            <span class="burger-text">Menu</span>
        </button>

        <nav class="main-nav" id="main-nav">
            <ul>
                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                {% if not app.user %}
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                {% else %}
                    <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                    <li><a href={{ path('user_show', {'id': 3}) }}>Profil</a></li>

                {% endif %}
                <li><a href="#">Nos produits</a></li>
                <li><a href="#">Qui sommes-nous</a></li>
                <li><a href="#">Nous contacter</a></li>
                <li><a href={{ path('user_index') }}>Admin</a></li>
            </ul>
        </nav>

    </header>

    <main>

        {% block body %}{% endblock %}

    </main>

    <footer>
        <ul>
            <li><a href="{{ path('homepage') }}">Accueil</a></li>
            <li><a href="{{ path('box_index') }}">Nos Boxs</a></li>
            <li><a href="#">Vos préférences</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <a id="newsletter" class="underline">Inscription newsletter</a>
    </footer>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

    {% endblock %}
    </body>

</html>