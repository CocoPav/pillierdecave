{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

    <section>
        <div>
            <h2>DECOUVREZ<br>NOS BOXS</h2>
            <p class="sous-titre">Trois boxs à découvrir, avec des alcools exceptionnels</p>
        </div>

        <div class="carousel">
            {% for box in boxes %}
                <div>
                    {{ box.title }}
                <img class="imagebox" src={{ asset('images/' ~ box.image) }}  />
                <a id="decouvrir" href="{{ path('box_show', {'id': box.id}) }}">
                    <h3>Découvrir</h3>
                    <img src="https://image.flaticon.com/icons/svg/271/271226.svg" height="20px">
                </a>
                </div>
            {% endfor %}

        </div>

    </section>

    <div>
        <h2>NOS DENIERES<br>BOXS</h2>
        <section id="sectionlastbox">
            <article class="lastbox">
                <img src="">
                <p>Box 1</p>
            </article>

            <article class="lastbox">
                <img src="">
                <p>Box 2</p>
            </article>

            <article class="lastbox">
                <img src="">
                <p>Box 3</p>
            </article>

            <article class="lastbox">
                <img src="">
                <p>Box 4</p>
            </article>
        </section>
    </div>

{% endblock %}
